<%= form_with url: "/merchant/#{@merchant.id}/discounts/#{@discount.id}", method: :patch, local: true do |f| %>
  <%= f.label :percentage %>
  <br>
  <%= f.text_field :percentage, :value => "#{@discount.percentage}" %>
  <br>
  <%= f.label :quantity_required %>
  <br>
  <%= f.text_field :quantity_required, :value => "#{@discount.quantity_required}" %>
  <br>
  <br>
  <%= f.submit %>
<% end %>