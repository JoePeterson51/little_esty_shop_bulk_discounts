<h2>Add Discount</h2>
<%= form_with url: "/merchant/#{@merchant.id}/discounts", method: :post, local: true do |f| %>
  <%= f.label :percentage %>
  <br>
  <%= f.text_field :percentage %>
  <br>
  <%= f.label :quantity_required %>
  <br>
  <%= f.text_field :quantity_required %>
  <br>
  <br>
  <%= f.submit %>
<% end %>